<%= form_for (@article) do |f| %>
	<%@article.errors.full_messages.each do |message| %>
 		<div class="red top-space">
  			<%= message %>
 		</div>
 	<%end%>
 	<div class="field">
  		<%= f.text_field :title, placeholder: "Título", class:"form-control" %>
 	</div>
	 <div class="field">
 		<%= f.text_area :description, placeholder: "Escribe aquí el artículo", style:"height:250px;", class:"form-control" %>
 	</div>
 	<div class="field">
  		<%= f.text_field :categories, placeholder: "Categoría", class:"form-control" %>
 	</div>
 	<div class="field">
  		<%= f.submit "GUARDAR", class:"btn be-red white large-padding" %>
 	</div>
<%end%>